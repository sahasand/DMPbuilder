{
  "name": "clinical-dmp-generator",
  "version": "1.0.0",
  "description": "Clinical Data Management Plan Generator - Produces production-ready DMPs for clinical studies",
  "main": "dist/core/app.js",
  "bin": {
    "generate-dmp": "./dist/cli/generate-dmp.js"
  },
  "scripts": {
    "build": "tsc",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build && npm run build:frontend",
    "dev": "ts-node-dev --respawn --transpile-only src/core/app.ts",
    "dev:backend": "npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "start": "node dist/core/app.js",
    "start:prod": "npm run build:all && npm start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json}'",
    "generate-dmp": "ts-node src/cli/generate-dmp.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "clinical",
    "data-management",
    "dmp",
    "clinical-trials",
    "ich-gcp",
    "fda",
    "ema"
  ],
  "author": "Clinical DMP Generator Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@google/generative-ai": "^0.24.1",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "joi": "^17.12.2",
    "multer": "^1.4.5-lts.1",
    "ora": "^5.4.1",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.14.0",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.12.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.28",
    "@types/pdfkit": "^0.13.3",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "puppeteer": "^24.11.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
