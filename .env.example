# Clinical DMP Generator Environment Variables
# Copy this file to .env and fill in your values

# Required: Anthropic API Key for clinical AI processing
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Required: Google Gemini API Key for clinical AI processing
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Application Settings
APP_NAME=Clinical DMP Generator
VERSION=1.0.0

# File Paths
OUTPUT_DIR=./output
TEMP_DIR=./temp
LOG_DIR=./logs

# Clinical Standards Versions
MEDDRA_VERSION=27.0
WHODRUG_VERSION=GLOBALB3Mar24

# Data Management Configuration
QUERY_RESPONSE_TIME=5      # Days for site response
QUERY_CLOSURE_TIME=10      # Days for query closure

# API Settings
API_RATE_LIMIT=10          # Requests per minute
API_TIMEOUT=300000         # 5 minutes in milliseconds

# Security
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info             # error, warn, info, debug